{
  "name": "ai-chatbot-app",
  "version": "1.0.0",
  "description": "Advanced AI-powered chatbot with RAG, multiple LLMs, and campaign management",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": ["chatbot", "ai", "rag", "llm", "react", "node"],
  "author": "AI Developer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "openai": "^4.20.1",
    "langchain": "^0.1.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "axios": "^1.6.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
